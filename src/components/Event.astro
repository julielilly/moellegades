---
const { title, dato, tid, p1, p2, p3, src } = Astro.props;
---

<section id="grid1-1">
  <div class="scroll_container">
    <div class="scroll">
      <h3>{dato}</h3>
      <p>{tid}</p>
      <img src={src} alt="event" /><img />
    </div>
  </div>
  <div class="text">
    <h3>{title}</h3>
    <p>{p1}</p>
    <p>{p2}</p>
    <p>{p3}</p>
  </div>
</section>

<style>
  #grid1-1, .text {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }
  #grid1-1 {
    margin-bottom: 4rem;
  }

  .text {
    padding-top: 5rem;
  }
  img {
   width: 100%;
  }

  h3 {
    padding: 0;
  }

  .scroll {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  @media only screen and (min-width: 600px) {
    #grid1-1 {
      flex-direction: row;
    }
    img {
     width: 40vw;
     padding-top: 1rem;
    }

    .scroll {
      position: -webkit-sticky; /* Safari */
      position: sticky;
      top: 7rem;
      height: 1px;

    }
    .scroll_container {
      overflow-y: clip;
      height: 850px;
    }

  }
</style>
