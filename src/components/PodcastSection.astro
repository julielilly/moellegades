---
const { episode, title, src, textOne, textTwo, textThree, textFour, textFive } = Astro.props;
---

<section>
    <h2><span>{episode}</span> - {title}</h2>
    <div class="container">
        <iframe style="border-radius:12px" src={src} width="100%" height="352" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
        <div class="textbox">
        <p>{textOne}</p>
        <p>{textTwo}</p>
        <p>{textThree}</p>
        <p>{textFour}</p>
        <p>{textFive}</p>
        </div>
    </div>
</section>

<style>
    iframe {
        border: 0px;

    }

    h2 {
        font-weight: 500;
    }
    span {
        font-weight: 800;
    }

    .textbox {
        height: 240px;
        overflow: scroll;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
    .container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    @media only screen and (min-width: 700px) {
    .container {
        flex-direction: row;
        gap: 10%;
    }
    iframe {
        min-width: 40%;
        height: 300px;
    }

  }


</style>