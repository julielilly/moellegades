      <input
        type="text"
        id="efternavn"
        name="efternavn"
        placeholder="Efternavn"
        required
      />
      <hr class="inputline" />
    </div>
    <div class="inputspace">
      <input
        type="email"
        id="email"
        name="email"
        placeholder="E-mail"
        required
      />
