<style>
  /* Layout */

  input::placeholder {
    font-family: maitree, serif;
    font-size: 16px;
  }

  .inputspace {
    position: relative;
    margin-right: 40px;
    margin-top: 20px;
  }

  .input {
    color: #737373;
    margin-top: 18px;
    padding: 0 5px;
    position: absolute;
    top: -10px;
    left: 0;
    font-size: 14px;
  }

  .inputspace input {
    border: none;
    border-bottom: 1px solid #000;
    padding: 5px;
    width: 150px;
    font-family: maitree, serif;
    font-size: 16px;
  }

  .inputspace hr {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border: none;
    border-bottom: 1px solid #000;
  }

  .submit {
    background-color: #fff;
    color: #000;
    border: none;
    cursor: pointer;
    font-family: maitree, serif;
    font-size: 18px;
    margin-top: 18px;
  }

  .submit:hover {
    color: var(--solskind_orange);
    transition: color 0.3s ease;
  }
  section {
    padding: 3%;
  }

  .inputline {
    width: 400px;
  }

  h4 {
    margin-top: 12px;
    margin-bottom: 12px;
    margin-right: 50px;
    padding: 0;
    width: 100%;
  }

  /* Logo + Social Media Links */


  .linkslogo {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: start;
    align-items: end;
    padding-bottom: 2rem;
  }
  .linkslogo:first-of-type {
    margin-top: 2rem;
  }

  .logo {
    justify-self: end;
    width: 90px;
  }

  #linebetween {
    display: none;
  }


  .sociale_medier svg {
    width: 20%;
  }
  .sociale_medier svg:hover path{
    fill: var(--lov_gron);
  }

  #opening {
    padding-top: 1rem;
  }

  button {
    padding-bottom: 1rem;
  }

  /* Media Queries */
  @media only screen and (min-width: 800px) {
    .grid1_1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    #opening {
      justify-self: end;
      margin-right: 10px;
    }

    .grid1_linje_1 {
      display: grid;
      grid-template-columns: 10fr 1fr 10fr;
      gap: 0;
    }

    .grid_nyhedsbrev {
      display: flex;
    }

    .tilmeldbrev {
      display: flex;
      align-items: center;
      grid-template-columns: 1fr 1fr 1fr 1fr;
    }

    .inputline {
      width: 200px;
    }

    .inputspace {
      margin-left: 10px;
      margin-right: 20px;
    }

    .submit {
      justify-self: end;
    }

    .inbetweenline {
      display: none;
    }

    #linebetween {
      display: block;
      background-color: #9A9A9A;
      width: 1px;
      height: 150%;
      justify-self: center;
      margin, padding: 0;
      margin-top: -3vw;
  
    }
    button {
    padding-bottom: 0;
  }
  }
   
</style>
