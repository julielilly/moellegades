<hr />

<section class="grid_nyhedsbrev">
  <h4>Tilmeld dig vores nyhedsbrev</h4>
  <form
    class="tilmeldbrev"
    name="Contact"
    data-netlify="true"
    method="POST"
    action="/submit_form"
  >
    <div class="inputspace">
      <input
        type="text"
        id="fornavn"
        name="fornavn"
        placeholder="Fornavn"
        required
      />
      <hr class="inputline" />
    </div>
    <div class="inputspace">
      <input
        type="text"
        id="efternavn"
        name="efternavn"
        placeholder="Efternavn"
        required
      />
      <hr class="inputline" />
    </div>
    <div class="inputspace">
      <input
        type="email"
        id="email"
        name="email"
        placeholder="E-mail"
        required
      />
      <hr class="inputline" />
    </div>
    <div>
      <button type="submit" class="submit">Submit</button>
    </div>
  </form>
</section>

<hr />

<section class="grid1_linje_1">
  <article>
    <h4>Boghandlen</h4>
    <article class="grid1_1">
      <div>
        <p>Møllegade 8A, 2200 København N</p>
        <p>info@moellegadesboghandel.dk</p>
        <p>+45 29 90 48 86</p>
        <p>CVR: 33942219</p>
      </div>
      <div id="opening">
        <p>Mandag - Lørdag 14-18</p>
        <p><em>Åbningstider kan variere</em></p>
      </div>
    </article>
    <article class="linkslogo">
      <div class="sociale_medier">
        <a href="https://www.facebook.com/moellegades" target="_blank"
          ><img src="/img/facebook_icon.svg" alt="" /></a
        >
        <a
          href="https://www.instagram.com/moellegadesboghandel/"
          target="_blank"><img src="/img/instagram_icon.svg" alt="" /></a
        >
      </div>
      <img class="logo" src="/img/logo_1.svg" alt="" />
    </article>
  </article>
  <div id="linebetween"></div>
  <hr class="inbetweenline" />
  <article>
    <h4>Forlaget</h4>
    <p>Forlaget kan kontaktes på</p>
    <p>moellegadesforlag@gmail.com</p>
    <article class="linkslogo">
      <div class="sociale_medier">
        <a
          class="fillcolormoelle"
          href="https://www.facebook.com/profile.php?id=100064144357563"
          target="_blank"
        >
          <img src="/img/facebook_icon.svg" alt="" />
        </a>
        <a
          href="https://www.instagram.com/forlagetmoellegadesboghandel/"
          target="_blank"><img src="/img/instagram_icon.svg" alt="" /></a
        >
      </div>
      <img class="logo" src="/img/logo_2.svg" alt="" />
    </article>
  </article>
</section>

<style>
  /* Layout */

  input::placeholder {
    font-family: maitree, serif;
    font-size: 16px;
  }

  .inputspace {
    position: relative;
    margin-right: 40px;
    margin-top: 20px;
  }

  .input {
    color: #737373;
    margin-top: 18px;
    padding: 0 5px;
    position: absolute;
    top: -10px;
    left: 0;
    font-size: 14px;
  }

  .inputspace input {
    border: none;
    border-bottom: 1px solid #000;
    padding: 5px;
    width: 150px;
    font-family: maitree, serif;
    font-size: 16px;
  }

  .inputspace hr {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border: none;
    border-bottom: 1px solid #000;
  }

  .submit {
    background-color: #fff;
    color: #000;
    border: none;
    cursor: pointer;
    font-family: maitree, serif;
    font-size: 18px;
    margin-top: 18px;
  }

  .submit:hover {
    color: var(--solskind_orange);
    transition: color 0.3s ease;
  }

  section {
    padding: 3%;
  }

  .inputline {
    width: 400px;
  }

  h4 {
    margin-top: 12px;
    margin-bottom: 12px;
    margin-right: 50px;
    padding: 0;
    width: 100%;
  }

  /* Logo + Social Media Links */
  .sociale_medier img {
    margin-right: 30px;
  }

  .linkslogo {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: start;
    align-items: center;
  }

  .logo {
    justify-self: end;
    width: 90px;
  }

  #linebetween {
    display: none;
  }

  /* Media Queries */
  @media only screen and (min-width: 600px) {
    .grid1_1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    #opening {
      justify-self: end;
      margin-right: 10px;
    }

    .grid1_linje_1 {
      display: grid;
      grid-template-columns: 10fr 1fr 10fr;
      gap: 0;
    }

    .grid_nyhedsbrev {
      display: flex;
    }

    .tilmeldbrev {
      display: flex;
      align-items: center;
      grid-template-columns: 1fr 1fr 1fr 1fr;
    }

    .inputline {
      width: 200px;
    }

    .inputspace {
      margin-left: 10px;
      margin-right: 20px;
    }

    .submit {
      justify-self: end;
    }

    .inbetweenline {
      display: none;
    }

    #linebetween {
      display: block;
      background-color: #737373;
      width: 0.4px;
      justify-self: center;
      margin: 0;
      padding: 0;
    }
  }
</style>
