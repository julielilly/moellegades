  <script>
    const burger = document.querySelector(".burger");
    const burgerLines = document.querySelectorAll(".burger_line");
    const paths = document.querySelectorAll("path");
    const menu = document.querySelector("#menu");
    const navItems = document.querySelectorAll(".nav");
    const logo = document.querySelector("#Layer_2");

    window.addEventListener("load", sidenVises);

    function sidenVises() {
      console.log(sidenVises);

      //sætter klik på burger knap
      burger.addEventListener("click", toggleMenu);

      setupNavbar();
    }

    function toggleMenu() {
      // ! = reverse statement
      if (!menu.classList.contains("open")) {
        burgerLines.forEach((line) => {
          line.style.animation = "tilt 0.5s linear forwards";
        });
        paths.forEach((path) => {
          path.style.animation = "color 0.5s linear forwards";
        });

        //viser menu med animation
        menu.classList.remove("hidden");

        menu.classList.add("open");
        menu.style.animation = "swipe 0.5s linear forwards";
      } else {
        burgerLines.forEach((line) => {
          line.style.animation = "straighten 0.5s linear forwards";
        });
        paths.forEach((path) => {
          path.style.animation = "reColor 0.5s linear forwards";
        });

        //starter lukke animation
        menu.style.animation = "swipe_away 0.5s linear forwards";

        menu.classList.remove("open");
      }
    }

    //function til at highligte nuværende side
    function setupNavbar() {

      // sætter variabel til at kunne differentirere mellem hvorvidt man er på forsiden (true) eller ej (false)
      let shouldHighligtIcon = true;

      //gør den nuværende sides nav grøn
      navItems.forEach((item) => {
        if (window.location.href.includes(item.id)) {
          item.classList.add("current_nav");
          shouldHighligtIcon = false;
        }
      });
      
      // hvis variablen er = true, skiftes farve på logo, da vi derfor er på forsiden
      if (shouldHighligtIcon === true) {
        logo.style.fill = "var(--lov_gron)"
        }
      
    }
  </script>
